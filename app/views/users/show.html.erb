<h1 class="heading"><%= @user.name %></h1>
<div class="user-container">
  <div class="user-container-show">
    <div class="user-show-left">
      <%= render partial: "show_index_tab", locals: {user: @user} %>
    </div>  

    <div class="user-show-right">
      <%= render partial: "show_follow_tab", locals: {user: @user} %>
    </div>  
  </div>
  
  <div class="link-btn">
    <% if current_user == @user %>
      <%= link_to "Edit", edit_user_registration_path(@user) unless current_user == @guest_user %>
    <% else %>
      <%= render partial: "follow_btn", locals: { user: @user} %>
    <% end %>
  </div>
</div>